- url = @question.new_record? ? admin_survey_question_group_questions_path(@survey, @question_group) : admin_survey_question_group_question_path(@survey, @question_group, @question)
= simple_form_for @question, as: 'question', url: url do |f|
  = f.input :question_text
  = f.input :code
  / needs a translation
  = f.input :type, collection: Helena::Question::TYPES.map { |type| [question_type_translation_for(type), type]}
  - if @question.respond_to? :required
    = f.input :required, as: :boolean, wrapper: :checkbox
  - if @question.is_a?(Helena::Questions::LongText) || @question.is_a?(Helena::Questions::StaticText)
    = f.input :default_value
  - if @question.is_a?(Helena::Questions::ShortText)
    = f.input :default_value, as: :string
  - if @question.is_a?(Helena::Questions::RadioGroup)
    %h3= t '.options'
    %table.table.labels
      %thead
        %tr
          %th.position= Helena::Label.human_attribute_name :position
          %th.preselected
          %th.text= Helena::Label.human_attribute_name :text
          %th.value= Helena::Label.human_attribute_name :value
          %th.delete
      %tbody
        = f.simple_fields_for :labels  do |label|
          %tr[label.object]
            %td.position
              = label.input :id, as: :hidden, label: false
              = label.input :position, as: :integer, label: false
            %td.preselected
              = label.input :preselected, wrapper: :checkbox
            %td.text
              = label.input :text, label: false
            %td.value
              = label.input :value, label: false
            %td.delete
              = label.input :_destroy, as: :boolean, wrapper: :checkbox unless label.object.new_record?

  %br
  = f.submit t('shared.save'), class: 'btn btn-success'
