source 'https://rubygems.org'

gemspec path: '../'

gem 'mongoid', '~> 6.0.0.rc0'

group :development, :test do
  gem 'pry'
  gem 'pry-byebug'
  gem 'simplecov'
  gem 'mongoid-rspec', '>= 3.0', github: 'gurix/mongoid-rspec', branch: 'mongoid_6_support'
  gem 'shoulda-matchers'
  gem 'rspec-rails', '>= 3'
  gem 'rspec-collection_matchers', '>= 1'
  gem 'factory_girl_rails', '>= 4.4'
  gem 'faker', '>= 1.4'
  gem 'capybara', '>= 2.3'
end
