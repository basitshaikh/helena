  gem 'pry-byebug'
  gem 'ruby-progressbar'
  gem 'better_errors'
  gem 'launchy'
  gem 'binding_of_caller'
  gem 'selenium-webdriver'
  gem 'simple_form'
  gem 'jquery-rails'
  gem 'bootstrap-sass'
  gem 'breadcrumbs_on_rails'
  gem 'shoulda-matchers'
  gem 'mongoid-rspec', git: 'https://github.com/mongoid-rspec/mongoid-rspec'
end
